<!doctype html>
%html{:manifest => "#{@manifest}"}
  %head
    %meta{:charset => "UTF-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %title
      = @title || 'jQuery Mobile Framework'
    = stylesheet_link_tag :mobile_default, :media => 'screen, projection'
    = yield :head_stylesheets

    = yield :head_scripts_before_jquery
    = javascript_include_tag :jquery
    = yield :head_scripts_before_mobile
    = javascript_include_tag :mobile
    = yield :head_scripts_after_mobile

    - # = javascript_include_tag 'multitouch-fake'
    = javascript_include_tag 'i18n', 'locales'
    = render :partial => "shared/locale.js.haml", :format => :js
    = csrf_meta_tag
    = javascript_include_tag 'common'

  %body
    = yield
