<!doctype html>
%html
  %head
    %meta{:charset => "UTF-8"}
    %link{:rel=>"icon", :href=>"/favicon.ico", :type=>"image/ico"}
    %link{:rel=>"shortcut icon", :href=>"/favicon.ico", :type=>"image/ico"}
    %link{:rel=>"shortcut icon", :href=>"/favicon.ico"}

    = stylesheet_link_tag 'compiled/screen.blueprint.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
      = javascript_include_tag 'jquery.pngFix'

    = stylesheet_link_tag "compiled/jquery/ui/#{@dynatree_theme}.css", :media => 'screen, projection'
    = stylesheet_link_tag "compiled/jquery/dynatree/#{@dynatree_skin}", :media => 'screen, projection'
    = stylesheet_link_tag :contextMenu
    = stylesheet_link_tag 'demos.css', :media => 'screen, projection'

    = javascript_include_tag :jquery_ui
    = javascript_include_tag :jrails
    = raw jrails_javascripts(I18n.locale)
    = javascript_include_tag :dynatree
    = javascript_include_tag :contextMenu

    = javascript_include_tag 'locales'
    = javascript_include_tag 'common'
    = javascript_include_tag 'ajax'
    = javascript_include_tag 'greybox'
    = javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery?

    = yield :content_head

  %body{body_attributes}
    #content
      #flash_messages
        %span
          = raw flash_messages
      = yield
      = render :partial => "dynatree/license"
