<!doctype html>
%html
  %head
    %meta{:charset => "UTF-8"}
    %link{:rel=>"icon", :href=>"/favicon.ico", :type=>"image/ico"}
    %link{:rel=>"shortcut icon", :href=>"/favicon.ico", :type=>"image/ico"}
    %link{:rel=>"shortcut icon", :href=>"/favicon.ico"}
    %title
      = @browser_title || 'Default Browser Title'

    = stylesheet_link_tag 'compiled/screen.blueprint.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
      = javascript_include_tag 'jquery.pngFix'

    = stylesheet_link_tag "compiled/jquery/ui/#{session[:theme]}", :media => 'screen, projection'
    
    = javascript_include_tag :jquery_ui
    = javascript_include_tag :jrails
    = raw jquery_javascripts(I18n.locale)
    = javascript_include_tag :jstree, :themeSwitcher
    = javascript_include_tag 'i18n', 'locales'
    = render(:partial => "shared/locale.js.haml", :format => :js)
    = csrf_meta_tag
    = javascript_include_tag 'common'
    = javascript_include_tag 'ajax'
    = javascript_include_tag 'application'

    = render(:partial => "layouts/sidebar.js.haml", :format => :js)

  %body{body_attributes}
    .container
      = render :partial => "layouts/header.blueprint"
      = render :partial => "layouts/navigation.blueprint"  
      #content
        .ui-widget-content.ui-corner-all{ :style => "background: none" }
          %iframe#demoframe{ :name => "contentFrame", :src => "welcome/hello", :marginwidth => "0", :frameborder => "0", :height => 852, :width => "100%", :marginheight => "0" }
            %p
              Your browser does not support iframes
        = render :partial => "layouts/footer.blueprint"
