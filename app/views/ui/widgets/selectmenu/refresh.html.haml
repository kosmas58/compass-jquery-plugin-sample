-@title = "#{t('txt.ui.name')} #{t('txt.ui.widgets.selectmenu.name')} - #{t('txt.ui.widgets.selectmenu.refresh')}"
= render :partial => "refresh.js.haml", :format => :js

.demo
  %h3
    =image_tag("icons/22x22/filament.png", :border => 0)
    = raw @title
  %form{:action => "#"}
    %fieldset
      %label{:for => "speedA"} Select a Speed:
      %br
      %br
      %select#speedA{:name => "speedA"}
        %option{:value => "1"} Item 1
        %option{:value => "2"} Item 2
        %option{:value => "3"} Item 3
        %option{:value => "4"} Item 4
        %option{:value => "5"} Item 5
        %option{:value => "6"} Item 6
        %option{:value => "7"} Item 7
        %option{:value => "8"} Item 8
        %option{:value => "9"} Item 9
        %option{:value => "10"} Item 10
        %option{:value => "11"} Item 11
        %option{:value => "12"} Item 12
        %option{:value => "13"} Item 13
        %option{:value => "14"} Item 14
    %br/
    %br/
    %br/
    %textarea#add
      %option{:value => "1"} New Item 1
      %option{:value => "2"} New Item 2
      %option{:value => "3"} New Item 3
    %br/
    %input#btn.ui-state-default.ui-widget-content{:type => "button", :value => "Refresh Selectmenu"}
/ End demo
