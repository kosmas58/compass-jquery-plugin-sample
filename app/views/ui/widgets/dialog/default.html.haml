      %form
        %input{ :value => "text input" }
        %br
        %input{ :type => "checkbox" }
          checkbox
        %br
        %input{ :type => "radio" }
          radio
        %br
        %select
          %option
            select
        %br
        %br
        %textarea
          textarea
        %br
