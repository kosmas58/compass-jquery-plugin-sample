-@title = "#{t('txt.ui.name')} #{t('txt.ui.interactions.resizable.default')} - #{t('txt.ui.interactions.resizable.synchronous-resize')}"

- content_for :head_scripts do
  = render :partial => "synchronous_resize.js.haml", :format => :js

.demo
  %h3
    =image_tag("icons/22x22/jquery-ui.png", :border => 0)
    =@title
  #resizable.ui-widget-header
    %h3.ui-state-active
      Resize
  #also.ui-widget-content
    %h3.ui-widget-header
      will also resize
/ End demo
.demo-description
  %p
    Resize multiple elements simultaneously by clicking and dragging the sides of one.  Pass a shared selector into the
    %code
      alsoResize
    option.
/ End demo-description
