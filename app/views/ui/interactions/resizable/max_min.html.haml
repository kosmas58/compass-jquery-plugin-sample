-@title = "#{t('txt.ui.name')} #{t('txt.ui.interactions.resizable.default')} - #{t('txt.ui.interactions.resizable.max-min')}"

- content_for :head_scripts do
  = render :partial => "max_min.js.haml", :format => :js

.demo
  %h3
    =image_tag("icons/22x22/jquery-ui.png", :border => 0)
    =@title
  #resizable.ui-widget-content
    %h3.ui-widget-header
      Resize larger / smaller
/ End demo
.demo-description
  %p
    Limit the resizable element to a maximum or minimum height or width using the
    %code
      maxHeight
    ,
    %code
      maxWidth
    ,
    %code
      minHeight
    , and
    %code
      minWidth
    options.
/ End demo-description
