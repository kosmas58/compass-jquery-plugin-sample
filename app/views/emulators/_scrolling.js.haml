- content_for :head_scripts do
  :javascript
    function scroll() {
      if($.cookie('scrolling') == 'auto') {
        $("#disp-area").attr("scrolling", 'auto');
      } else {
        $("#disp-area").attr("scrolling", 'no');
      }
      $("#disp-area")[0].contentWindow.location.reload(true);
    }

    $(function() {
      $("#scroll").click(function() {
        if($.cookie('scrolling') == 'auto') {
          scrollValue = 'no';
        } else {
          scrollValue = 'auto';
        }
        $.cookie('scrolling', scrollValue);
        scroll();
        set_icon_scroll();
        return false;
      });
    });
