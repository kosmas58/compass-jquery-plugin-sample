          %a{:href => "/mobile/tuts/tuts/site?siteName=psdtuts"}
            %img.ui-li-icon{:alt => "Psdtuts", :src => "/images/demo/mobile/tuts/psdLogo.jpg"}
              Psdtuts+
        %li
          %a{:href => "/mobile/tuts/tuts/site?siteName=vectortuts"}
            %img.ui-li-icon{:alt => "Vectortuts+", :src => "/images/demo/mobile/tuts/vectorLogo.jpg"}
              Vectortuts+
        %li
          %a{:href => "/mobile/tuts/tuts/site?siteName=mobiletuts"}
            %img.ui-li-icon{:alt => "Mobiletuts+", :src => "/images/demo/mobile/tuts/mobileLogo.png"}
              Mobiletuts+
        %li
          %a{:href => "/mobile/tuts/tuts/site?siteName=aetuts"}
            %img.ui-li-icon{:alt => "Aetuts+", :src => "/images/demo/mobile/tuts/aeLogo.jpg"}
              Aetuts+
        %li
          %a{:href => "/mobile/tuts/tuts/site?siteName=phototuts"}
            %img.ui-li-icon{:alt => "Phototuts+", :src => "/images/demo/mobile/tuts/photoLogo.jpg"}
              Phototuts+
        %li
          %a{:href => "/mobile/tuts/tuts/site?siteName=cgtuts"}
            %img.ui-li-icon{:alt => "Cgtuts+", :src => "/images/demo/mobile/tuts/cgLogo.jpg"}
              Cgtuts+
        %li
          %a{:href => "/mobile/tuts/tuts/site?siteName=audiotuts"}
            %img.ui-li-icon{:alt => "Audiotuts+", :src => "/images/demo/mobile/tuts/audioLogo.jpg"}
              Audiotuts+
        %li
          %a{:href => "/mobile/tuts/tuts/site?siteName=flashtuts"}
            %img.ui-li-icon{:alt => "Activetuts+", :src => "/images/demo/mobile/tuts/activeLogo.jpg"}
              Activetuts+
        %li
          %a{:href => "/mobile/tuts/tuts/site?siteName=webdesigntutsplus"}
            %img.ui-li-icon{:alt => "Webdesigntuts+", :src => "/images/demo/mobile/tuts/wdLogo.jpg"}
              Webdesigntuts+
    .content-secondary
      %div{"data-collapsed" => "true", "data-role" => "collapsible", "data-theme" => "c"}
        %h3 More tuts+ experiments in this section
        %ul{"data-dividertheme" => "d", "data-role" => "listview", "data-theme" => "c"}
          %li{"data-role" => "list-divider"} Tuts+ experiments
          %li{"data-theme" => "a"}
            %a{:href => "/mobile/tuts/tuts", :rel => "external"}
              %img.ui-li-icon{:alt => "Tuts+", :src => "/images/icons/16x16/tuts.png"}
                Tuts+ reader
          %li
            %a{:href => "/mobile/tuts/news", :rel => "external"}
              %img.ui-li-icon{:alt => "Tuts+", :src => "/images/icons/16x16/working.png"}
