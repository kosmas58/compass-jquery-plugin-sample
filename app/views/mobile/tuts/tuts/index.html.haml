-@title = "Tuts+"

= render :partial => "index.css.haml"

.type-interior{"data-role" => "page"}
  %header.tuts{"data-backbtn" => "false", "data-position" => "inline", "data-role" => "header"}
    %h1
      %img{:alt => "Tuts+", :src => "/images/demo/mobile/tuts/TLogo.png"}
    %a.ui-btn-left{"data-direction" => "reverse",
                   "data-theme" => "c",
                   "data-icon" => "home",
                   "data-iconpos" => "notext",
                   :href => "/mobile/experiments/main",
                   :rel => "external"} Home
    %a{"data-icon" => "info",
       "data-theme" => "c",
       :href => "http://net.tutsplus.com/tutorials/javascript-ajax/how-to-build-an-rss-reader-with-jquery-mobile-2/",
       :rel => "external",
       :title => "How to Build an RSS Reader with jQuery Mobile by Jeffrey Way",
      }
      Info
  / /header
  %div{"data-role" => "content"}
    .content-primary
      %ul{"data-counttheme" => "e", "data-dividertheme" => "d", "data-role" => "listview", "data-theme" => "c"}
        %li
          %a{:href => "/mobile/tuts/tuts/site?siteName=nettuts"}
            %img.ui-li-icon{:alt => "Nettuts", :src => "/images/demo/mobile/tuts/ntLogo.jpg"}
              Nettuts+
