= render :partial => "index.css.haml"

%div{"data-role" => "page"}
  %header{:class => [@siteName], "data-role" => "header"}
    %h1
      = @siteName.capitalize + "+"
  / /header
  %div{"data-role" => "content"}
    %ul{"data-counttheme" => "e", "data-dividertheme" => "d", "data-role" => "listview", "data-theme" => "c"}
      - cache("#{@siteName}_cache", :time_to_live => 3.hours) do
        - @feed.each do |item|
          %li
            %a{:href => "/mobile/tuts/tuts/article?siteName=#{@siteName}&origLink=#{item[:uri]}", :style => "font-size: 0.7em;" }
              #{item[:title]}
            %span.ui-li-count #{item[:comments]}
  / /content
  %footer{:class => [@siteName], "data-role" => "footer"}
    %h4
      www.tutsplus.com
  / /footer
/ /page
