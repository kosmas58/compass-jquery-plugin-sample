              %option{:value => "WI"} Wisconsin
              %option{:value => "WY"} Wyoming
          %li{"data-role" => "fieldcontain"}
            %label.select{:for => "select-choice-a"} Choose shipping method:
            %select#select-choice-a{"data-native-menu" => "false", :name => "select-choice-a"}
              %option Custom menu example
              %option{:value => "standard"} Standard: 7 day
              %option{:value => "rush"} Rush: 3 days
              %option{:value => "express"} Express: next day
              %option{:value => "overnight"} Overnight
          %li.ui-body.ui-body-b
            %fieldset.ui-grid-a
              .ui-block-a
                %button{"data-theme" => "d", :type => "submit"} Cancel
              .ui-block-b
                %button{"data-theme" => "a", :type => "submit"} Submit
    / /content-primary
    .content-secondary
      .ui-body-b
        %div{"data-collapsed" => "true", "data-content-theme" => "d", "data-role" => "collapsible", "data-theme" => "b"}
          %h3 More in this section
