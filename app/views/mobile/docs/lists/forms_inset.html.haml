-@title = "jQuery Mobile Docs - Inset Lists with Forms"
= render :partial => "/mobile/index.js.haml", :format => :js

.type-interior{"data-role" => "page"}
  %div{"data-role" => "header", "data-theme" => "f"}
    %h1 Inset with Forms
    %a.ui-btn-right.jqm-home{"data-direction" => "reverse", "data-icon" => "home", "data-iconpos" => "notext", :href => "/mobile"} Home
  / /header
  %div{"data-role" => "content"}
    .content-primary
      %form
        %ul{"data-inset" => "true", "data-role" => "listview"}
          %li{"data-role" => "fieldcontain"}
            %label{:for => "name"} Text Input:
            %input#name{:name => "name", :type => "text", :value => ""}/
          %li{"data-role" => "fieldcontain"}
            %label{:for => "textarea"} Textarea:
            %textarea#textarea{:cols => "40", :name => "textarea", :rows => "8"}
          %li{"data-role" => "fieldcontain"}
            %label{:for => "search"} Search Input:
            %input#search{:name => "password", :type => "search", :value => ""}/
          %li{"data-role" => "fieldcontain"}
            %label{:for => "slider2"} Flip switch:
            %select#slider2{"data-role" => "slider", :name => "slider2"}
              %option{:value => "off"} Off
              %option{:value => "on"} On
          %li{"data-role" => "fieldcontain"}
            %label{:for => "slider"} Slider:
            %input#slider{:max => "100", :min => "0", :name => "slider", :type => "range", :value => "0"}/
          %li{"data-role" => "fieldcontain"}
            %fieldset{"data-role" => "controlgroup"}
              %legend Choose as many snacks as you'd like:
              %input#checkbox-1a.custom{:name => "checkbox-1a", :type => "checkbox"}/
              %label{:for => "checkbox-1a"} Cheetos
              %input#checkbox-2a.custom{:name => "checkbox-2a", :type => "checkbox"}/
              %label{:for => "checkbox-2a"} Doritos
              %input#checkbox-3a.custom{:name => "checkbox-3a", :type => "checkbox"}/
              %label{:for => "checkbox-3a"} Fritos
              %input#checkbox-4a.custom{:name => "checkbox-4a", :type => "checkbox"}/
              %label{:for => "checkbox-4a"} Sun Chips
          %li{"data-role" => "fieldcontain"}
            %fieldset{"data-role" => "controlgroup", "data-type" => "horizontal"}
              %legend Font styling:
              %input#checkbox-6.custom{:name => "checkbox-6", :type => "checkbox"}/
              %label{:for => "checkbox-6"} b
              %input#checkbox-7.custom{:name => "checkbox-7", :type => "checkbox"}/
              %label{:for => "checkbox-7"}
                %em i
              %input#checkbox-8.custom{:name => "checkbox-8", :type => "checkbox"}/
              %label{:for => "checkbox-8"} u
          %li{"data-role" => "fieldcontain"}
            %fieldset{"data-role" => "controlgroup"}
              %legend Choose a pet:
              %input#radio-choice-1{:checked => "checked", :name => "radio-choice-1", :type => "radio", :value => "choice-1"}/
              %label{:for => "radio-choice-1"} Cat
              %input#radio-choice-2{:name => "radio-choice-1", :type => "radio", :value => "choice-2"}/
              %label{:for => "radio-choice-2"} Dog
              %input#radio-choice-3{:name => "radio-choice-1", :type => "radio", :value => "choice-3"}/
              %label{:for => "radio-choice-3"} Hamster
              %input#radio-choice-4{:name => "radio-choice-1", :type => "radio", :value => "choice-4"}/
              %label{:for => "radio-choice-4"} Lizard
          %li{"data-role" => "fieldcontain"}
            %fieldset{"data-role" => "controlgroup", "data-type" => "horizontal"}
              %legend Layout view:
              %input#radio-choice-c{:checked => "checked", :name => "radio-choice-b", :type => "radio", :value => "on"}/
              %label{:for => "radio-choice-c"} List
              %input#radio-choice-d{:name => "radio-choice-b", :type => "radio", :value => "off"}/
              %label{:for => "radio-choice-d"} Grid
          %li{"data-role" => "fieldcontain"}
            %label.select{:for => "select-choice-1"} Choose shipping method:
            %select#select-choice-1{:name => "select-choice-1"}
              %option{:value => "standard"} Standard: 7 day
              %option{:value => "rush"} Rush: 3 days
              %option{:value => "express"} Express: next day
              %option{:value => "overnight"} Overnight
          %li{"data-role" => "fieldcontain"}
            %label.select{:for => "select-choice-3"} Your state:
            %select#select-choice-3{:name => "select-choice-3"}
              %option{:value => "AL"} Alabama
              %option{:value => "AK"} Alaska
              %option{:value => "AZ"} Arizona
              %option{:value => "AR"} Arkansas
              %option{:value => "CA"} California
