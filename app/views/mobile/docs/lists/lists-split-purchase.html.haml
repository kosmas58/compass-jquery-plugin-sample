-@title = "jQuery Mobile Docs - Purchase dialog"

- content_for :content_head do
  = render(:partial => "/mobile/index.js.haml", :format => :js)

%div{"data-role" => "page", "data-theme" => "a"}
  %div{"data-role" => "header", "data-theme" => "e"}
    %h1 Purchase album?
  / /header
  %div{"data-role" => "content"}
    %h4 This album costs $10.99 and includes 9 tracks.
    %p Your download will begin immediately on your mobile device and all tracks will by added your your library next time you sync.
    %a{"data-role" => "button", "data-rel" =>"back", "data-theme" => "b", :href => "/mobile/docs/lists"} Purchase album
    %a{"data-role" => "button", "data-rel" =>"back", :href => "/mobile/docs/lists"} No thanks
  / /content
/ /page
