        %img.ui-li-icon{:alt => "Great Britain", :src => "/images/demo/mobile/flags/gb.png"}
          %a{:href => "/mobile/docs/lists"} Great Britain
          %span.ui-li-count 0
      %li
        %img.ui-li-icon{:alt => "Japan", :src => "/images/demo/mobile/flags/fi.png"}
          %a{:href => "/mobile/docs/lists"} Japan
          %span.ui-li-count 12
      %li
        %img.ui-li-icon{:alt => "Sweden", :src => "/images/demo/mobile/flags/sj.png"}
          %a{:href => "/mobile/docs/lists"} Sweden
          %span.ui-li-count 328
      %li
        %img.ui-li-icon{:alt => "United States", :src => "/images/demo/mobile/flags/us.png"}
