          %option{:value => "OR"} Oregon
          %option{:value => "PA"} Pennsylvania
          %option{:value => "RI"} Rhode Island
          %option{:value => "SC"} South Carolina
          %option{:value => "SD"} South Dakota
          %option{:value => "TN"} Tennessee
          %option{:value => "TX"} Texas
          %option{:value => "UT"} Utah
          %option{:value => "VT"} Vermont
          %option{:value => "VA"} Virginia
          %option{:value => "WA"} Washington
          %option{:value => "WV"} West Virginia
          %option{:value => "WI"} Wisconsin
          %option{:value => "WY"} Wyoming
      %p
        %strong Button
        based button:
      %button{"data-role" => "none"} Button element
      %p
        %strong Input type="button"
        based button:
      %input{"data-role" => "none", :type => "button", :value => "Input type=button"}
      %p
        %strong Input type="submit"
        based button:
      %input{"data-role" => "none", :type => "submit", :value => "Input type=submit"}
      %p
        %strong Input type="reset"
        based button:
      %input{"data-role" => "none", :type => "reset", :value => "Input type=reset"}
      %p
        %strong Input type="image"
        based button:
      %input{"data-role" => "none", :src => "/images/demo/mobile/jquery-logo.png", :style => "width:120px; padding:5px; background:#fff; border:1px solid #999;", :type => "image", :value => "Input type=image"}
  / /content
/ /page
