      / /header
      %div{"data-role" => "content"}
        %ul{"data-role" => "listview"}
          %li
            %a{:href => "index.html"} Inbox
            %span.ui-li-count 12
          %li
            %a{:href => "index.html"} Outbox
            %span.ui-li-count 0
          %li
            %a{:href => "index.html"} Drafts
            %span.ui-li-count 4
          %li
            %a{:href => "index.html"} Sent
            %span.ui-li-count 328
          %li
            %a{:href => "index.html"} Trash
            %span.ui-li-count 62
      / /content
    / /page
