        %input#cb_hd_sp{:name => "cb_hd_sp", :type => "checkbox"}/
        %label{:for => "cb_hd_sp"} touchstart - Stop Propagation
        %input#cb_hm_pd{:name => "cb_hm_pd", :type => "checkbox"}/
