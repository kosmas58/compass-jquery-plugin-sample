= javascript_include_tag :dst

:javascript
  $(document).ready(function() {
    $("#store").live('click', function(){
      $.DSt.store_form(this.form);
    });
    $("#recall").live('click', function(){
      $.DSt.recall_form(this.form);
    });
    $("#reset").live('click', function(){
      $('textarea','#dst').val('');
      $('input','#dst')
      .not('button, submit, reset, hidden')
      .val('')
      .removeAttr('checked')
      .removeAttr('selected');
      $('#radio-choice-1').checkboxradio('refresh');
      $('#radio-choice-2').checkboxradio('refresh');
      $('#radio-choice-3').checkboxradio('refresh');
      $('#checkbox-a').checkboxradio('refresh');
    });
  });
 
