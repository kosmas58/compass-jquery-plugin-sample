-@title = "jQuery Mobile Framework - Photo 1"
= render :partial => "index.js.haml", :format => :js

.type-interior{"data-role" => "page"}
  %div{"data-role" => "header", "data-theme" => "f"}
    %h1 A canoe
    %a.ui-btn-left{"data-icon" => "home", "data-iconpos" => "notext", :href => "/mobile/experiments/main", :rel => "external"} Home
  %div{"data-role" => "content"}
    .content-primary
      %img{:alt => "photo-canoe", :src => "/images/demo/mobile/photos/photo-canoe.jpeg"}
    .content-secondary
      .ui-body-b
        %div{"data-collapsed" => "true", "data-role" => "collapsible", "data-theme" => "b"}
          %h3 More experiments in this section
          %ul{"data-dividertheme" => "d", "data-role" => "listview", "data-theme" => "c"}
            %li{"data-role" => "list-divider"} Experiments
            %li
              %a{:href => "/mobile/experiments/datepicker", :rel => "external"}
                %img.ui-li-icon{:alt => "HTML5", :src => "/images/icons/16x16/jqmobile.png"}
                  Datepicker
            %li
              %a{:href => "/mobile/experiments/google_maps", :rel => "external"}
                %img.ui-li-icon{:alt => "HTML5", :src => "/images/icons/16x16/jqmobile.png"}
                  Google Maps
            %li
              %a{:href => "/mobile/experiments/navbar_glyphish", :rel => "external"}
                %img.ui-li-icon{:alt => "HTML5", :src => "/images/icons/16x16/jqmobile.png"}
                  Navbar with Glyphish icons
            %li{"data-theme" => "a"}
              %a{:href => "/mobile/experiments/photos"}
                %img.ui-li-icon{:alt => "HTML5", :src => "/images/icons/16x16/jqmobile.png"}
                  Photos
            %li
              %a{:href => "/mobile/experiments/scrollview", :rel => "external"}
                %img.ui-li-icon{:alt => "HTML5", :src => "/images/icons/16x16/jqmobile.png"}
                  Scroll View
            %li
              %a{:href => "/mobile/experiments/weather"}
                %img.ui-li-icon{:alt => "HTML5", :src => "/images/icons/16x16/jqmobile.png"}
                  Weather forecast
  / /content
  .ui-footer.ui-bar-a
    %a.prev{"data-icon" => "arrow-l", :href => "/mobile/experiments/photos"} Prev
    %a.next{"data-icon" => "arrow-r", "data-iconpos" => "right", :href => "/mobile/experiments/photos/photo3"} Next
