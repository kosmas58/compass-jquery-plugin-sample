- content_for :head_stylesheets do
  = stylesheet_link_tag :ical, :media => 'screen, projection'
  = stylesheet_link_tag :ical_print, :media => 'print'

- content_for :head_scripts do
  = javascript_include_tag :ical
  :javascript
    $(function() {
      $("button, a", ".buttons").button();
    });

  = ui_event_for :event, :url => widgets_ical_calendar_events_path, :actions => {:update => "/edit", :create => "/new", :delete => "/delete", :reload => "/index_reload"}

  :css
    div.AnyTime-win {
      z-index: 20000;
      width: 480;
    }
    #event_start_date, #event_end_date {
      background-image:url("/images/jquery/ical/calendar.png");
      background-position:right center;
      background-repeat:no-repeat;
    }
    #event_start_time, #event_end_time {
      background-image:url("/images/jquery/ical/clock.png");
      background-position:right center;
      background-repeat:no-repeat;
    }

- content_for :license do
  = render :partial =>  "widgets/ical/license"
