  function afterInsertRow(rowid, aData){
    switch (aData.closed) {
      case "Yes":
        $("#invheaders_demo1003").jqGrid('setCell',rowid,"total","",{color:'green'});
        break;
      case "No":
        $("#invheaders_demo1003").jqGrid('setCell',rowid,"total","",{color:'red'});
        break;
      case "Client 3":
        $("#invheaders_demo1003").jqGrid('setCell',rowid,"total","",{color:'blue'});
        break;
    }
  };
  
