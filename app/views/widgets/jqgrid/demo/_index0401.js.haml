    $(function() {
      $("a", "#toolbar").button();
    });

    $(function() {
      $("#cm1").click( function() {
        var s;
        s = $("#invheaders_demo0401").jqGrid('getGridParam','selarrrow');
        alert(s);
      });
      $("#cm1s").click( function() {
        $("#invheaders_demo0401").jqGrid('setSelection',"13");
      });
    });

  = raw @grid

