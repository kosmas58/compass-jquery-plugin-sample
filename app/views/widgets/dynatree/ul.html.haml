-@title = "#{t('txt.dt.name')} - #{t('txt.dt.ul')}"

- content_for :head_scripts do
  = render :partial => "ul.js.haml", :format => :js
  = render :partial => "skin.js.haml", :format => :js

.demo
  %h3
    =image_tag("icons/22x22/tree.png", :border => 0)
    =@title
  = render :partial => "skin_form"
  #tree
    %ul{:style => "display:none"}
      %li#key1{:title => "Look, a tool tip!"}
        item1 with key and tooltip
      %li#key2.selected
        item2: selected on init
      %li#key3.folder
        Folder with some children
        %ul
          %li{:id => "key3_1"}
            Sub-item 3.1
          %li{:id => "key3_2"}
            Sub-item 3.2
      %li#key4.expanded
        Document with some children (expanded on init)
        %ul
          %li{:id => "key4_1"}
            Sub-item 4.1
          %li{:id => "key4_2"}
            Sub-item 4.2
  %div
    Active node:
    %span#echoActive
      -
/ End demo
.demo-description
  %p
    This sample initializes the tree from a &lt;ul> element.
/ End demo-description   
