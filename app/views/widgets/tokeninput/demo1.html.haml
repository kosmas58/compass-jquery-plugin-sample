            });
        });
            %h2#onresult Modify Response with onResult Callback
    %div
      %input#demo-input-onresult{:name => "blah", :type => "text"}/
      %input{:type => "button", :value => "Submit"}/
      :javascript
        $(document).ready(function() {
            $("#demo-input-onresult").tokenInput("http://shell.loopj.com/tokeninput/tvshows.php", {
                onResult: function (results) {
                    $.each(results, function (index, value) {
                        value.name = "OMG: " + value.name;
                    });

                    return results;
                }
            });
        });
            %h2#onadd-ondelete Using onAdd and onDelete Callbacks
    %div
      %input#demo-input-onadd-ondelete{:name => "blah", :type => "text"}/
      %input{:type => "button", :value => "Submit"}/
      :javascript
        $(document).ready(function() {
            $("#demo-input-onadd-ondelete").tokenInput("http://shell.loopj.com/tokeninput/tvshows.php", {
                onAdd: function (item) {
                    alert("Added " + item.name);
                },
                onDelete: function (item) {
                    alert("Deleted " + item.name);
                }
            });
        });
        