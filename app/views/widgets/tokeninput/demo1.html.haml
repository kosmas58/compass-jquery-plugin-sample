    %div
      %input#demo-input-facebook-theme{:name => "blah2", :type => "text"}/
      %input{:type => "button", :value => "Submit"}/
      :javascript
        $(document).ready(function() {
            $("#demo-input-facebook-theme").tokenInput("http://shell.loopj.com/tokeninput/tvshows.php", {
