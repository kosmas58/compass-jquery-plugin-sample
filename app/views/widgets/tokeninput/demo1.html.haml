%html
  %head
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js", :type => "text/javascript"}
    %script{:src => "src/jquery.tokeninput.js", :type => "text/javascript"}
    %link{:href => "styles/token-input.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "styles/token-input-facebook.css", :rel => "stylesheet", :type => "text/css"}/
    :javascript
      $(document).ready(function() {
          $("input[type=button]").click(function () {
              alert("Would submit: " + $(this).siblings("input[type=text]").val());
          });
      });
        %body
    %h1 jQuery Tokeninput Demos
    %h2 Simple Server-Backed Search
    %div
      %input#demo-input{:name => "blah", :type => "text"}/
      %input{:type => "button", :value => "Submit"}/
      :javascript
        $(document).ready(function() {
            $("#demo-input").tokenInput("http://shell.loopj.com/tokeninput/tvshows.php");
        });
            %h2 Simple Local Data Search
    %div
      %input#demo-input-local{:name => "blah", :type => "text"}/
      %input{:type => "button", :value => "Submit"}/
      :javascript
        $(document).ready(function() {
            $("#demo-input-local").tokenInput([
                {id: 7, name: "Ruby"},
                {id: 11, name: "Python"},
                {id: 13, name: "JavaScript"},
                {id: 17, name: "ActionScript"},
                {id: 19, name: "Scheme"},
                {id: 23, name: "Lisp"},
                {id: 29, name: "C#"},
                {id: 31, name: "Fortran"},
                {id: 37, name: "Visual Basic"},
                {id: 41, name: "C"},
                {id: 43, name: "C++"},
                {id: 47, name: "Java"}
            ]);
        });
