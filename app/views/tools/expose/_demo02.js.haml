:css
  #mask { background-position:50% -10px !important; }
  #ball { margin-left:95px; }
  #exposeMask { background:#072a88 url(/images/demo/tools/mask/mask_star_1600px.png) no-repeat 50% 0; }
    
:javascript
  // What is $(document).ready ? See: http://flowplayer.org${jqt}/documentation/basics.html#document_ready
  $(function() {
    // setup exposing
    $("#ball").click(function()  {
      var el = $(this);
      el.expose({
        // grow the ball when exposing starts
        onBeforeLoad: function() {
          el.animate({width: 298});
        },
        // shrink the ball when exposing closes
        onBeforeClose: function() {
          el.animate({width: 130});
        }
      }); 
    });
  });

